

@model IEnumerable<Intranet.Models.GrupoAcesso>


<div class="container-fluid">


    <!-- Exportable Table -->
    <div class="row clearfix">
        <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
            <div class="card">
                <div class="header">
                    <h2>
                        Grupos
                    </h2>
                    <ul class="header-dropdown m-r--5">
                        <li class="dropdown">
                            <a href="javascript:void(0);" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-haspopup="true" aria-expanded="false">
                                <i class="material-icons">more_vert</i>
                            </a>
                            <ul class="dropdown-menu pull-right">
                                <li><a href="javascript:void(0);">Action</a></li>
                                <li><a href="javascript:void(0);">Another action</a></li>
                                <li><a href="javascript:void(0);">Something else here</a></li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="body">
                    <div class="table-responsive">
                        <table class="table table-bordered table-striped table-hover dataTable js-exportable" id="tableGrupos">
                            <thead>
                                <tr>
                                    <th>Id</th>
                                    <th>Descrição</th>
                                    <th>Ativo</th>
                                    <th></th>
                                </tr>
                            </thead>
                            <tbody>

                                @foreach (var item in Model)
                                {
                                    <tr>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.id)
                                        </td>
                                        <td>
                                            @Html.DisplayFor(modelItem => item.descricao)
                                        </td>
                                        <td>

                                            <input type="checkbox" class="chk-col-red" id="@item.id" checked="@item.isAtivo" onclick="MudarAtivo(@item.id)" />
                                            <label for="@item.id">@Html.DisplayNameFor(model => model.isAtivo)</label>

                                        </td>

                                        <td>
                                           
                                            <button type="button" class="btn bg-black waves-effect waves-light" onclick="showCancelMessage(@item.id);">
                                                <i class="material-icons">delete</i>
                                            </button>
                                            
                                            @*data-type="cancel"*@
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<!-- #END# Exportable Table -->



